@model hand2hand.Models.Product

<div class="well">

    <div class="row">
        <div class="col-xs-10">
            <h3>
                <strong>@Model.Name</strong>
            </h3>
            <h4>
                <strong>@Model.Category</strong>
            </h4>
        </div>
 
        <div class="col-xs-2">
            <h2>
                <strong id ="category" class="pull-right label label-primary">@Model.Price.ToString("# uah")</strong>
            </h2>
            @using(Html.BeginForm("AddToCart", "Cart"))
            {
                <div class="pull-right">
                    @Html.HiddenFor(p => p.Id)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <input type="submit" class="btn-success" value="Add to Cart"/>
                </div>
            }
        </div>
    </div>
    <span class="lead">
        @Model.Description
    </span>
</div>
